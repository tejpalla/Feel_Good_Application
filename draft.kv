#:kivy 1.0
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 30, 30  
            spacing: 0, 40
            Label: 
                text: "User Login"
            TextInput:
                id: username
                size_hint: 0.3, 0.6
                hint_text: "User Name"
            TextInput: 
                id: password
                size_hint: 0.3, 0.6
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    size_hint: 0.3, 0.6
                    pos_hint: {'center_x':0.5, 'center_y': 0.6}
                    on_press: root.go_to_loginSuccess(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_fail
                text:""

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding:10,10
            spacing:10,0
            Button:  
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
            Button: 
                text: "Signup"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.signUp()

<LoginSuccessScreen>:
    GridLayout:
        padding: 40,40
        spacing: 0,40
        cols: 1
        RelativeLayout:
            ImageButton: 
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.3, 0.5
                pos_hint: {'center_x':0.8, 'center_y': 0.6}
                 
        Label:
            text: "How you feelin?"
        TextInput:
            id: expression
            hint_text: "You can try: sad, happy, gray"
        Button: 
            text: "Comfort Me"
            on_press: root.expression(root.ids.expression.text)
        Label:
            id: quote 
            text: ""

<SignUpScreen>:
    GridLayout: 
        cols: 1
        GridLayout:
            cols: 1
            padding: 50, 50
            spacing: 50, 50
            Label: 
                text: "Signup for Serotonin!"
            TextInput:
                id: username
                hint_text: "New Username"
            TextInput:
                id: password
                hint_text: "New Password"
            RelativeLayout:
                Button:
                    text: "Signup"
                    size_hint: 0.4, 0.8
                    pos_hint: {'center_x':0.5, 'center_y': 0.6}
                    on_press: root.add_user(root.ids.username.text, root.ids.password.text)
        GridLayout:
            

<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 30, 30  
            spacing: 0, 40
            Label:
                text: "Signup Success"
            RelativeLayout:
                Button:
                    text: "Login"
                    size_hint: 0.4, 0.2
                    pos_hint: {'center_x':0.5, 'center_y': 0.6}
                    on_press: root.go_to_login()
        GridLayout:
            cols: 1
            size_hint: 0.3, 0.3
<RootWidget>:
    LoginScreen: 
        name: "login_screen"

    SignUpScreen: 
        name: "sign_up_screen"

    SignUpSuccessScreen:
        name: "sign_up_success_screen"

    LoginSuccessScreen:
        name: "login_success_screen"
    


